<h1 class="text-center mb-3">{{title}}</h1>

<form action="/api/members" method="POST" class="mb-4">
  <div class="form-group">
    <!-- name attribute gets sent in the request body -->
    <!-- Sending json through a form instead of through Postman -->
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">
  </div>

  <div class="form-group">
    <!-- email attribute gets sent in the request body -->
    <!-- Sending json through a form instead of through Postman -->
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control">
  </div>
  <input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>

<!-- Pass in members and list them in the template-->
<h4>Members</h4>
<ul class="list-group">
  <!-- Loop through the members we passed in -->
  <!-- Handlebars syntax -->
  {{#each members}}
  <li class="list-group-item">{{this.name}}: {{this.email}}</li>
  {{/each}}
</ul>

<!-- In order to show the JSON -->
<a href="/api/members" class="btn btn-light mt-4">Visit API</a>

